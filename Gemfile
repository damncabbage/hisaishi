gem 'rake'

# Frontend
gem 'sass'
gem 'haml'
gem 'rabl' # JSON, JSONP
#gem 'sinatra-jsonp', :require => 'sinatra/jsonp'

# Helpers
gem 'sinatra-flash', :require => 'sinatra/flash'
